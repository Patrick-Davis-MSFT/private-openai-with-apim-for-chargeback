<policies>
    <inbound>
        <base/>
        <set-backend-service backend-id="openai-backend" />
        <set-header name="api-key" exists-action="override">
            <value>{{openai-apikey}}</value>
        </set-header>
        <set-variable name="requestData" value="@(context.Request.Body.As<JObject>(preserveContent: true))" />
    </inbound>
    <backend>
        <base/>
    </backend>
    <outbound>
        <base/>
    </outbound>
    <on-error>
        <base/>
    </on-error>
</policies>